# .env

# MongoDB Configuration
MONGO_HOST=mongo
MONGO_PORT=27017
MONGO_USER=raguser
MONGO_PASSWORD=ragpassword
MONGO_DB_NAME=rag_metadata

# ChromaDB Configuration
# If running as server via docker-compose:
CHROMA_HOST=chroma
CHROMA_PORT=8000 # Internal port within docker network
# If running as library within backend:
# CHROMA_PERSIST_PATH=/app/chroma_data # Path inside backend container

# Ollama Configuration
OLLAMA_API_URL=http://ollama:11434

# Model Configuration
LLM_MODEL_NAME=gemma:2b # Example, choose based on your system
EMBEDDING_MODEL_NAME=paraphrase-multilingual-MiniLM-L12-v2

# File Upload Configuration
UPLOAD_FOLDER=/app/uploads # Path inside backend container

# Frontend Configuration (Example)
# VITE_BACKEND_API_URL=http://localhost:8000/api # For local dev access from browser

# Feature Flags
SHOW_SOURCES=true

# Logging
LOG_LEVEL=INFO